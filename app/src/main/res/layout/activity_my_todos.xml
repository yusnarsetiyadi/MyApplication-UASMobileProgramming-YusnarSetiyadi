<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyTodos"
    android:background="@drawable/green_blue_gradient">

    <TextView
        android:id="@+id/tekshome"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="example"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black" />

    <TextView
        android:id="@+id/syncData"
        android:drawableLeft="@drawable/baseline_file_download_24"
        android:layout_marginTop="15dp"
        android:layout_marginRight="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:gravity="right"/>

    <TextView
        android:id="@+id/refreshData"
        android:drawableLeft="@drawable/baseline_refresh_24"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:gravity="right"/>

    <Button
        android:id="@+id/guide"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:gravity="left"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:padding="17dp"
        android:background="@drawable/button_rounded_corner"
        android:drawableLeft="@drawable/info_solid"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/tekshome"
        android:layout_marginTop="10dp"
        android:layout_height="576dp">

        <LinearLayout
            android:id="@+id/task_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tekshome"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="27dp"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:text="@string/about_developer"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>