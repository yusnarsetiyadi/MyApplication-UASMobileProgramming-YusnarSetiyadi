<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@drawable/green_blue_gradient">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:id="@+id/cardView"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        card_view:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/imageViewCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yusnar"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView"
        android:layout_marginTop="16dp"
        android:text="Hello, My Name is Yusnar Setiyadi, backend Developer with Golang Programming Language and MySql Database skills. Able to be implemented
programming algorithms, computational complexity, programming problem solving, silent fire development,
relational databases and others. I pay great attention to each of Experience, Architecture, and Code Quality
the projects I develop as well as unit tests achieve a minimum average coverage of 80%. Looking for a position for
develop various applications or websites with companies that value creativity, freedom to innovate and focus
on one goal. \n\nHowever, on this occasion I tried to learn mobile programming using the Java programming language. Thanks for visiting, send me a coffee if you find any bugs."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingStart="16dp"
        android:layout_margin="20dp"
        android:paddingEnd="16dp" />

    <TextView
        android:id="@+id/textViewBottomCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:text="Developed by: Yusnar Setiyadi"
        android:layout_gravity="center_horizontal" />

</RelativeLayout>
